<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <!--CSS Section-->
  <link rel='stylesheet' href="/bootstrap/dist/css/bootstrap.min.css">
  <link rel='stylesheet' href="/@fortawesome/fontawesome-free/css/all.min.css">
  <link rel="stylesheet" href="/Content/app.css" />
</head>
<body>
    <main class="container">
        <div class="row">
            <div class="col-md-offset-3 col-md-11">
                <h1><%= title %></h1>
                <a href="/contacts-list/add" class="btn btn-primary"role="button">
                    <i class="fas fa-plus-circle"></i> Add Contact</a>
                <br>
                <table class="table table-bordered table-striped table-hover">
                    <!-- Table Headings-->
                        <tr>
                            <th class="text-center">Name</th>
                            <th class="text-center">Number</th>
                            <th class="text-center">Email</th>
                            <th class="text-center"></th>
                            <th class="text-center"></th>
                        </tr>
                        <!-- Table Body-->
                        <% for (let count = 0; count < ContactsList.length; count++) { %>
                            <tr>
                                <td class="text-center col-2"><%= ContactsList[count].Name %></td>
                                <td class="text-center col-2"><%= ContactsList[count].Number %></td>
                                <td class="text-center"><%= ContactsList[count].Email %></td>
                                <td class="text-center col-1">
                                    <a href="/contacts-list/edit/<%= ContactsList[count]._id %>" class="btn btn-primary btn-sm">
                                        <i class="fas fa-pencil-alt"></i> Edit</a>
                                </td>
                                <td class="text-center col-1">
                                    <a href="/contacts-list/delete/<%= ContactsList[count]._id %>" class="btn btn-danger btn-sm">
                                        <i class="fas fa-trash-alt"></i> Delete</a>
                                </td>
                            </tr>
                        <% } %>
                </table>
            </div>
        </div>
    </main>

